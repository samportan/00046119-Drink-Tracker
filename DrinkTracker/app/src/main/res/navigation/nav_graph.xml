<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/drinksListFragment">

    <fragment
        android:id="@+id/drinksListFragment"
        android:name="com.sportan.drinktracker.ui.drink.DrinksListFragment"
        android:label="fragment_drinks_list"
        tools:layout="@layout/fragment_drinks_list" >
        <action
            android:id="@+id/action_drinksListFragment_to_drinkFragment"
            app:destination="@id/drinkFragment" />
        <action
            android:id="@+id/action_drinksListFragment_to_newDrinkFragment"
            app:destination="@id/newDrinkFragment" />
    </fragment>
    <fragment
        android:id="@+id/drinkFragment"
        android:name="com.sportan.drinktracker.ui.drink.DrinkFragment"
        android:label="fragment_drink"
        tools:layout="@layout/fragment_drink" />
    <fragment
        android:id="@+id/newDrinkFragment"
        android:name="com.sportan.drinktracker.ui.drink.NewDrinkFragment"
        android:label="fragment_new_drink"
        tools:layout="@layout/fragment_new_drink" />
</navigation>